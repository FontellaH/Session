@model User

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Dashboard</title>
</head>

<body>
    <div class="container">
        <h1>Welcome, @Model.Name!</h1> <!-- Display the user's name -->
        <p>Current Number: @Model.CurrentNumber</p> <!-- Display the current number -->

        
        <form asp-action="Dashboard" asp-controller="Home" method="post"> <!-- Form for updating the number -->
            
            <input type="hidden" name="operation" id="operation" value="" /><!-- Hidden field to pass the operation type to the server -->

            <button type="button" onclick="updateNumber('+1')">+1</button>
            <button type="button" onclick="updateNumber('-1')">-1</button>
            <button type="button" onclick="updateNumber('x2')">x2</button>
            <button type="button" onclick="updateNumber('random')">Random</button>

            <!-- Logout button -->
            <form method="post" asp-action="Logout" asp-controller="Home">
                <button type="submit">Logout</button>
            </form>
        </form>
    </div>

</body>

</html>